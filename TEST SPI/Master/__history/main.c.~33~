#include <16F877A.h>
#use delay(crystal=20M)
#include <stdlib.h>
#include <string.h>
#use rs232 (baud = 56000, parity = N, xmit = PIN_C6, rcv = PIN_C7)
volatile int i = 0;
#INT_SSP
void rcv_spi ()
{
   if (spi_data_is_in () == 1)
   {
      i = spi_read ();
      }
}

void main()
{
   enable_interrupts (INT_SSP);
   enable_interrupts (global);
   setup_spi (spi_master|spi_l_to_h|spi_clk_div_16);
   while(TRUE)
   {
      if (input (PIN_B7) == 0)
      {
         output_low (PIN_A0);
         delay_ms (1000);
         spi_write (1);
      }
      
      if (i == 1)
      {
         output_high (PIN_D0);
         delay_ms (1500);
      }
      output_low (PIN_D0);
      i = 0;
      delay_ms (100);
   }
}
