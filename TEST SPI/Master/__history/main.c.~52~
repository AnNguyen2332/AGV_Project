#include <16F877A.h>
#use delay (clock = 20M)
#include <stdlib.h>
#include <string.h>
#use rs232 (baud = 56000, parity = N, xmit = PIN_C6, rcv = PIN_C7)
int i = 0;
#INT_SSP
void rcv_spi ()
{
   if (spi_data_is_in () == 1)
   {
      i = spi_read ();
      }
}

