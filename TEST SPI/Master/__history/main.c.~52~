void main()
{
   setup_spi (spi_master|spi_l_to_h|spi_clk_div_16);
   enable_interrupts (INT_SSP);
   //ext_int_edge (H_TO_L);
   enable_interrupts (global);
   //enable_interrupts (INT_EXT);
   while(TRUE)
   {
      if (input (PIN_B7) == 0)
      {
         output_high (PIN_A0);
         output_low (PIN_A1);
         delay_ms (1000);
         spi_write (1);
      }
      
      if (i == 1)
      {
         output_high (PIN_B4);
         output_high (PIN_A1);
         output_low (PIN_A0);
         delay_ms (1000);
         spi_write (1);
      }
      i = 0;
      delay_ms (100);
   }
}
