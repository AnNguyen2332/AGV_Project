#include <16F877A.h>
#device ADC=10
#use delay(clock=20000000)
#include <lcd.c>
#FUSES NOWDT //No Watch Dog Timer
#FUSES HS
#use rs232 (baud = 9600, parity = N, xmit = PIN_C6, rcv = PIN_C7)
void lcd_puts (char *str)
{
   while (*str != 0)
   {
      lcd_putc (*str);
      str++;
   }
}

void main()
{
   setup_adc_ports(ALL_ANALOG);
   setup_adc(ADC_CLOCK_INTERNAL);
   #define LCD_ENABLE_PIN  PIN_D1                                    
   #define LCD_RS_PIN      PIN_D2                                    
   #define LCD_RW_PIN      PIN_D3                                    
   #define LCD_DATA4       PIN_D4                                    
   #define LCD_DATA5       PIN_D5                                    
   #define LCD_DATA6       PIN_D6                                   
   #define LCD_DATA7       PIN_D7
   lcd_init ();
   char out [17];
   while(TRUE)
   {
      int x1, x2, x3, x4, x5, x6, x7;
      set_adc_channel (0);
      delay_us (10);
      x1 = read_adc ();
      delay_us (10);
      
      set_adc_channel (1);
      delay_us (10);
      x2 = read_adc ();
      delay_us (10);
      
      set_adc_channel (2);
      delay_us (10);
      x3 = read_adc ();
      delay_us (10);
      
      set_adc_channel (3);
      delay_us (10);
      x4 = read_adc ();
      delay_us (10);
      
      set_adc_channel (4);
      delay_us (10);
      x5 = read_adc ();
      delay_us (10);
      
      set_adc_channel (5);
      delay_us (10);
      x6 = read_adc ();
      delay_us (10);
      
      set_adc_channel (6);
      delay_us (10);
      x7 = read_adc ();
      
      int x = ((-3)*x1 + (-2)*x2 + (-1)*x3 + 0*x4 + 1*x5 + 2*x6 + 3*x7)/(x1 + x2 + x3 + x4 + x5 + x6 + x7);
      lcd_gotoxy (1,1);
      //sprintf (out, "KHOANG CACH: %u", x);
      //lcd_puts (out);
      lcd_putc ('4');
      printf ("CB1 = %u\r", x1);
      printf ("CB2 = %u\r", x2);
      printf ("CB3 = %u\r", x3);
      printf ("CB4 = %u\r", x4);
      printf ("CB5 = %u\r", x5);
      printf ("CB6 = %u\r", x6);
      printf ("CB7 = %u\r", x7);
      delay_ms (2000);
   }

}
